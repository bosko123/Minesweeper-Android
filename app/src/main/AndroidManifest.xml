<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bostjan.mfc.minesweeper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/flag_0"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/flag_0"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".game.GameWindow"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.MainWindow"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.RegisterWindow"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameModeWindow"
            android:screenOrientation="portrait" />
        <activity android:name=".UserSettingsWindow"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>